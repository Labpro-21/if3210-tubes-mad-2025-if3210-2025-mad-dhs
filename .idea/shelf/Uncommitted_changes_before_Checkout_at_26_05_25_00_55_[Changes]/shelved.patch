+                    onBluetoothGranted()
+                } else {
+                    onBluetoothDenied()
+                }
+            }
+            AUDIO_PERMISSION_REQUEST -> {
+                if (grantResults.isNotEmpty() && grantResults.all { it == PackageManager.PERMISSION_GRANTED }) {
+                    onAudioGranted()
+                } else {
+                    onAudioDenied()
+                }
+            }
+        }
+    }
